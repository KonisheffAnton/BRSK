@model BRSK.Models.PageModel
@{
    ViewBag.Title = "Добавление модели машины";
}
<form asp-action="create" asp-controller="home">

    <select name="Brand" asp-items="Model.BrandList" class="form-control"></select>

    <div class="form-group">
        <label asp-for="ModelName" class="control-label">Название</label>
        <input type="text" asp-for="ModelName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Activity" class="control-label">Наличие</label>
        <input type="checkbox" asp-for="Activity" value="true"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
