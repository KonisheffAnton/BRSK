@model BRSK.Models.Model
@{
    ViewBag.Title = "Добавление модели машины";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Activity" class="control-label">Наличие</label>
        <input type="checkbox" asp-for="Activity" value="true"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
