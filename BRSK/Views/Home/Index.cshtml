@model IEnumerable<BRSK.Models.Model>
@{
    ViewBag.Title = "Все модели машин";
}
@*<a asp-action="Create">Добавить модель</a>*@
<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            @if (item.Brand.Activity == false)
            {
                <td style="color: lightgray">@item.Brand.Name</td>
            }
            else
            {
                <td>@item.Brand.Name</td>
            }
            @if (item.Activity == false)
            {
                <td style="color: lightgray">@item.Name</td>
            }
            else
            {
                <td>@item.Name</td>
            }
         
