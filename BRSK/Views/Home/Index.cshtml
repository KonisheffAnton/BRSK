@model IEnumerable<BRSK.Models.Model>
@{
    ViewBag.Title = "Все модели машин";
}
<a asp-action="Create">Добавить модель</a>
<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Brand.Name</td>
            <td>@item.Name</td>  
            <td>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.ModelId">Подробнее</a> |
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.ModelId">Изменить</a> |
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.ModelId">Удалить</a>
            </td>
        </tr>
    }
</table>