@model BRSK.Models.Model
@{
    ViewBag.Title = "Удаление модели машины";
}

<div>
    <dl class="dl-horizontal">
        <dt>Наименование</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    <div>
        <form asp-controller="Model" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>