@model BRSK.Models.Brand
@{
    ViewBag.Title = "Удаление модели машины";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(brand => brand.Name)
        </dd>

        <dt>Brand Id</dt>
        <dd>
        @Html.DisplayFor(brand => brand.BrandId)
        </dd>
    </dl>

    <div>
        <form asp-controller="Brand" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>